#include<stdio.h>
#include<math.h>
int main()
{
    float mealCost,tip,tax,tipPercent,taxPercent,totalCost;
    scanf("%f %f %f",&mealCost,&tipPercent,&taxPercent);
    tip=mealCost*(tipPercent/100);
    tax=mealCost*(taxPercent/100);
    totalCost=mealCost+tip+tax;
    printf("%.0f",round(totalCost));
    return 0;
}
